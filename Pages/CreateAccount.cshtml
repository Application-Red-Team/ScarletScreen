@page
@model ScarletScreen.Pages.CreateAccountModel
@{
    ViewData["Title"] = "Account Creation";
}
<head>
    <link rel="stylesheet" href="/css/accountcreation.css">
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;700&display=swap" rel="stylesheet">

</head>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="benefits-section">
                <h2>Benefits of Creating an Account</h2>
                <ul>
                    <li>Log movies and shows you have watched</li>
                    <li>Leave ratings and reviews</li>
                    <li>Connect with other movie enthusiast</li>
                    <li>Add movies to your personal watchlist</li>
                    <li>Connect with other movie enthusiast</li>
                    <li>Explore unique profile features</li>
            </div>
        </div>
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Account.user">Username</label>
                    <input asp-for="Account.user" class="form-control" placeholder="Enter your username">
                    <span asp-validation-for="Account.user" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Account.email">Email</label>
                    <input asp-for="Account.email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Account.email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Account.pass">Password</label>
                    <input asp-for="Account.pass" type="password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Account.pass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password">Re-enter Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Confirm your password">
                </div>
                <button type="submit" class="btn btn-primary">Create Account</button>
            </form>
        </div>
    </div>
</div>

