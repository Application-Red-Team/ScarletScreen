@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;700&display=swap" rel="stylesheet">

</head>


<div class="container">
    <div class="row mt-4">
        <div class="col">
            <h2>New Movies</h2>
            <div class="row">
                <!-- Movie cards go here -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <a href="taylorswift">
                        <img src="/images/taylorswift.jpg" class="card-img-top" alt="Movie Poster">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">Taylor Swift The Eras Tour </h5>
                            <p class="card-text">The cultural phenomenon continues as pop icon Taylor Swift performs hit songs in a once-in-a-lifetime concert experience.</p><br>
                            <a href="https://www.youtube.com/watch?v=2YS8IplgAYE" target="_blank" class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>
                <!-- Add more movie cards as needed -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/nun2.jpg" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title">The Nun II</h5>
                            <p class="card-text">In 1956 France, a priest is violently murdered, and Sister Irene begins to investigate. She once again comes face-to-face with a powerful evil.</p><br>
                            <a href="https://youtu.be/QF-oyCwaArU?si=eIhQGQsCOR84g14F" target="_blank " class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/barbie.jfif" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title">Barbie</h5>
                            <p class="card-text">Barbie and Ken are having the time of their lives in the colorful and seemingly perfect world of Barbie Land. However, when they get a chance to go to the real world.</p>
                            <a href="https://youtu.be/pBk4NYhWNMM?si=pCf-gDLxtJ3N0GXP" target="_blank " class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/expend4bles.jfif" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title">Expend4bles</h5>
                            <p class="card-text">Armed with every weapon they can get their hands on, the Expendables are the world's last line of defense and the team that gets called when all other options are off the table.</p>
                            <a href="https://youtu.be/DhlaBO-SwVE?si=P7AbexxsitRqSORt" target="_blank " class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>
            </div>
        
            <h2>Releases Soon</h2>
            <div class="row">
                <!-- Movie cards go here -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/fivenights.jpg" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title">Five Nights at Freddy's</h5>
                            <p class="card-text">A troubled security guard begins working at Freddy Fazbear's Pizzeria. While spending his first night on the job, he realizes the late shift at Freddy's won't be so easy to make it through.</p>
                            <a href="https://www.youtube.com/watch?v=0VH9WCFV6XQ&ab_channel=UniversalPictures" target="_blank " class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>
                <!-- Add more movie cards as needed -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/migration.jpg" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title">Migration</h5>
                            <p class="card-text">A family of ducks tries to convince its overprotective father to go on the vacation of a lifetime.</p><br><br><br>
                            <a href="https://youtu.be/cQfo0HJhCnE?si=iA9rIge0DNvtcPbY" target="_blank " class="btn btn-primary">Watch Trailer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
