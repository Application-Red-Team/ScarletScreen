@page
@model ScarletScreen.Pages.ProfileModel
@{
	ViewData["Title"] = "Profile";
}
<head>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@400;700&display=swap" rel="stylesheet">

</head>


<div class="profile">
    <div class="profile-header">
        <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="profile-picture" /> 
        <div class="profile-info"> 

            <h2>@Model.Username</h2>
           <p>Bio: @Model.Bio</p> 
            <a href="EditProfile" class="edit-profile-button">Edit Profile</a> <br><br>
            <p class="forgot">
                <a href="ChangePassword">Change Password</a>
            </p>
        </div>
    </div>
    <div class="profile-bar"></div>
        <!-- Stats Section -->
        <h3>Statistics</h3>
        <div class="statistics-box">
            <div class="genre-container">
          <div class="row">
            <div class="col-md-4">
                <div class="genre">
                    <div class="genre-name">Action</div>
                    <div class="percentage-bar">
                        <div class="percentage" style="width: 0%;"></div>
                    </div>
                    <div class="percentage-value"> 0%</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="genre">
                    <div class="genre-name">Comedy</div>
                    <div class="percentage-bar">
                        <div class="percentage" style="width: 0%;"></div>
                    </div>
                    <div class="percentage-value"> 0%</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="genre">
                    <div class="genre-name">Drama</div>
                    <div class="percentage-bar">
                        <div class="percentage" style="width: 0%;"></div>
                    </div>
                    <div class="percentage-value">0%</div>
                </div>
            </div>
            </div>
            <!-- Repeat the above three columns for each genre -->
            <div class="row">
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Romance</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Mystery</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Sci-Fi</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
            </div>
            <!-- Repeat the above three columns for each genre -->
            <div class="row">
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Horror</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Historical</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="genre">
                        <div class="genre-name">Fantasy</div>
                        <div class="percentage-bar">
                            <div class="percentage" style="width: 0%;"></div>
                        </div>
                        <div class="percentage-value">0%</div>
                    </div>
                </div>
            </div>
        </div>

    <!-- Ratings Section -->
            <div class="ratings">
                <h3>Ratings</h3>
                <div class="movie-list">
                    
                    <!-- Add more movies as needed -->
                </div>
